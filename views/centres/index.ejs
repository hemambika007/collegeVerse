          <p class="text-gray-900 leading-none">Rahul Naik</p>
          <p class="text-gray-600">Oct 20</p>
        </div>
      </div>
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2"><%= centre.title  %></div>
      <p class="text-gray-700 text-base">
        <%= centre.description  %>
      </p>
    </div>
    <div class="flex justify-center">
        <a class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg" href="/centres/<%= centre._id %>">comment </a>
    </div>
    <div class="px-6 pt-4 pb-2">
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#IITISM</span>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#IITB</span>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">#IITM</span>
    </div>
    
  </div>
</div>
</section>
  <% }%>