<% layout('layouts/boilerplate') %> 
    
   




    
  <% for (let centre of centres){%>
    <a class="inline-flex text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded text-lg" href="/users/<%=centre._id%>">Chat</a>
     
    <section class="text-gray-600 body-font">
        <div class="container mx-auto flex px-5 py-24 items-center justify-center flex-col">
  <div class="max-w-sm rounded overflow-hidden shadow-lg">
    <img class="w-full" src="<%= centre.image%>" alt="Sunset in the mountains"><br>
    <div class="flex items-center">
        <img class="w-10 h-10 rounded-full mr-4" src="https://firebasestorage.googleapis.com/v0/b/clg-share.appspot.com/o/Profile%20Image%2FFJQeBgPRFoZCfZoEbClx76T30Wf2?alt=media&token=2340f865-822b-4de0-b08e-d76a7befe6f0">
